---
import ExhibitionLayout from "../../../layouts/ExhibitionLayout.astro";
import MarqueeText from "../../../components/exhibition/MarqueeText.astro";
import ImageDisplay from "../../../components/exhibition/ImageDisplay.astro";

import { room1 } from '../../../data/room1'

const bgColor = "bg-[#8FC3A5]";

import { t } from "../../../i18n";

export async function getStaticPaths() {
  return [{ params: { locale: "en" } }, { params: { locale: "de" } }];
}

const { locale } = Astro.params;
---

<ExhibitionLayout backgroundClass={bgColor}>
  <div class="flex flex-col justify-between">
    <div class="container mx-auto px-6 pt-10">
      <p class="whitespace-pre-line text-l md:text-xl mb-8">
        {t(locale, "exhibition.schwelle-content")}
      </p>
    </div>
    <div>
      <ImageDisplay images={room1} />
      <MarqueeText bgColor="bg-[#67A789]" textColor="text-[#1A3F35]" />
      <div class="bg-neutral-900 text-white">
        <div class="container mx-auto px-6 min-h-[500px] flex flex-col justify-center items-center">
          <p class="text-xl font-mono">to be announced</p>
        </div>
      </div>
    </div>
  </div>
</ExhibitionLayout>
