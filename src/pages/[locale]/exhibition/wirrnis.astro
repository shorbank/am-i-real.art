---
import ExhibitionLayout from "../../../layouts/ExhibitionLayout.astro";
const bgColor = "bg-[#A8BDBA]";

import { t } from "../../../i18n";

export async function getStaticPaths() {
  return [{ params: { locale: "en" } }, { params: { locale: "de" } }];
}

const { locale } = Astro.params;
---

<ExhibitionLayout backgroundClass={bgColor}>
  <div class="container mx-auto px-6 pt-10">
    <p class="whitespace-pre-line text-l md:text-xl">{t(locale, "exhibition.wirrnis-content")}</p>
  </div>
</ExhibitionLayout>