---
import Layout from "../../layouts/Layout.astro";
import { t } from "../../i18n";
import { getRelativeLocaleUrl } from "astro:i18n";

const { locale } = Astro.params;
---

<Layout>
  <div class="bg-red-500 px-8 py-10 min-h-[60dvh] text-white flex flex-col justify-end items-end">
    <h1 class="text-right font-oracle text-7xl font-thin">
      Complete <br> Creative <br> control
    </h1>
  </div>
  <div class="flex flex-col mt-5 px-7 container mx-auto">
    <a class="text-red-500" href={getRelativeLocaleUrl(locale, "about")}>
      {t(locale, "about.title")}
    </a>
    <a class="text-red-500" href={getRelativeLocaleUrl(locale, "guestbook")}>
      {t(locale, "guestbook.title")}
    </a>
  </div>
</Layout>
